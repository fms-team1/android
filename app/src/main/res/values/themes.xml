<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Neofin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1778E9</item>
        <item name="colorPrimaryVariant">#1778E9</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1778E9</item>
        <item name="colorSecondaryVariant">#1778E9</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="neofin">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#1778E9</item>
    </style>

    <style name="some_id">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#3379CA</item>
    </style>

    <style name="CustomTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Neofin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Neofin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Neofin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Fab_Bottom_app_bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#1778E9</item>
        <item name="colorPrimaryVariant">#1778E9</item>
        <item name="colorOnPrimary">#ffffff</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">14sp</item>
    </style>

</resources>